#!/usr/bin/env -S octave-cli

arg_list = argv();
n = nargin;

% parse '-o' for the output filename
output = '-';
for i=1:n
    if strcmp(arg_list{i}, '-o') ~= 0
        output = arg_list{i+1};
        arg_list(i:i+1, :) = [];
        n = n - 2;
        break;
    end
end

% parse the octave code
prog = arg_list{n};
arg_list(n, :) = [];
n = n - 1;

% read the images
x = iio_read(arg_list{1});
imgs = {};
for i=1:n
    imgs{i} = iio_read(arg_list{i});
end

% decorate the octave code with @(x, y, ...)
preprog = '@(';
for i=1:n
    if i <= 3
        c = 'x' + i - 1;
    else
        c = 'a' + i - 1 - 3;
    end
    preprog = [preprog char(c)];
    if i != n
        preprog = [preprog ','];
    end
end
preprog = [preprog ') '];
prog = [preprog prog];

% run the code on the images
func = str2func(prog);
r = func(imgs{:});

% print or save the result
if numel(r) == 1
    fprintf("%f\n", r);
else
    iio_write(output, r);
end

% vim: ft=octave
